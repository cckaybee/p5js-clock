{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */

        /* Basic Options */
        "target": "ES6",
        "module": "none",
        "sourceMap": true,
        "outFile": "./out/app.js",
        "rootDir": "./src",

        /* Strict Type-Checking Options */
        "strict": true,
        "alwaysStrict": true,

        /* Module Resolution Options */
        "moduleResolution": "node",

        /* Advanced Options */
        "forceConsistentCasingInFileNames": true
    }
}
